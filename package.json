{
  "name": "bch-addr-slp",
  "version": "0.1.0",
  "description": "Bitcoin Cash and SLP general purpose address translation. With regtest support",
  "main": "src/bchaddr.js",
  "files": [
    "src/*",
    "dist/*"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "standard --global describe --global it src/* test/* scripts/*",
    "pretest": "npm run lint",
    "test": "nyc --reporter=html --reporter=text mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "docs": "jsdoc src/bchaddr.js --destination jsdoc && http-server jsdoc",
    "preversion": "npm test",
    "version": "node scripts/version.js",
    "postversion": "node scripts/postversion.js",
    "bump": "npm version patch -m 'Bump version to %s.'",
    "bump:minor": "npm version minor -m 'Bump version to %s.'"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ActorForth/bch-addr-slp.git"
  },
  "keywords": [
    "bitcoin-cash",
    "bitcoin",
    "bch",
    "cryptocurrency",
    "address",
    "encoding",
    "translation",
    "base58",
    "bitpay",
    "cash-address",
    "regtest"
  ],
  "author": "Napat Charuphant <napat_pat3@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ActorForth/bch-addr-slp/issues"
  },
  "homepage": "https://github.com/ActorForth/bch-addr-slp#readme",
  "devDependencies": {
    "browserify": "^15.2.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "http-server": "^0.11.1",
    "jsdoc": "^3.5.5",
    "lodash": "^4.17.15",
    "mocha": "^4.1.0",
    "mustache": "^2.3.2",
    "nyc": "^11.9.0",
    "shelljs": "^0.8.2",
    "standard": "^10.0.3",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "bs58check": "^2.1.2",
    "cashaddrjs-slp": "^0.2.12"
  }
}
